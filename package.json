{
    "name": "transmutation",
    "description": "Enhanced promises for API creation, inspired by RxJS and Lodash.",
    "version": "0.0.15",
    "homepage": "https://github.com/RayBenefield/transmutation",
    "author": {
        "name": "Raymond Benefield",
        "email": "raymond.benefield@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/RayBenefield/transmutation.git"
    },
    "bugs": {
        "url": "https://github.com/RayBenefield/transmutation/issues"
    },
    "license": "MIT",
    "main": "src/index.js",
    "engines": {
        "node": ">= 8.1.2",
        "npm": ">=1.4.3"
    },
    "scripts": {
        "prebuild": "npm run clean && mkdir -p dist/ && cp yarn.lock LICENSE readme.md dist/ && cat package.json | jq 'del(.babel,.devDependencies,.scripts)' --indent 4 > dist/package.json",
        "build": "babel src/ -d dist/src",
        "clean": "rimraf dist",
        "lint": "eslint -c .eslintrc.json src/",
        "test": "babel-tape-runner test/{,**/}*.js | tap-spec",
        "watch": "nodemon --exec npm-run-all test lint sloc",
        "sloc": "echo 'Lines of source code: ' && sloc src/ --exclude node_modules -f json | jq '.summary.source'",
        "patch": "npm version patch -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit",
        "minor": "npm version minor -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit",
        "major": "npm version major -m 'v%s' && js-beautify -r package.json && git commit -a --amend --no-edit",
        "postinstall": "node -e \"var s='../src',d='node_modules/src',fs=require('fs');fs.exists(d,function(e){e||fs.symlinkSync(s,d,'dir')});\""
    },
    "dependencies": {
        "lodash": "^4.17.4"
    },
    "devDependencies": {
        "babel-cli": "^6.24.1",
        "babel-plugin-wildcard": "^2.1.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-es2016": "^6.24.1",
        "babel-preset-es2017": "^6.24.1",
        "babel-tape-runner": "^2.0.1",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^15.0.1",
        "eslint-plugin-import": "^2.3.0",
        "eslint-plugin-jsx-a11y": "^5.0.3",
        "eslint-plugin-react": "^7.1.0",
        "git-hooks": "^1.1.8",
        "js-beautify": "^1.6.14",
        "node-jq": "^0.7.0",
        "nodemon": "^1.11.0",
        "npm-run-all": "^4.0.2",
        "rimraf": "^2.6.1",
        "sloc": "^0.2.0",
        "tap-spec": "^4.1.1",
        "tape": "^4.8.0",
        "tape-bdd": "^0.0.1"
    },
    "babel": {
        "presets": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "plugins": [
            [
                "wildcard",
                {
                    "exts": [
                        "js",
                        "es6",
                        "es",
                        "jsx",
                        "javascript",
                        "json"
                    ],
                    "noCamelCase": true
                }
            ]
        ]
    }
}