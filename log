#!/bin/bash
git stash -u
BRANCH=$(git symbolic-ref --short HEAD)
git checkout master
git pull --rebase
vim worklog.md
SESSION=$(<.session)
((++SESSION))
echo ${SESSION} > .session
git commit -am "docs(worklog): Session work log #${SESSION} [skip ci]."
git push
git checkout ${BRANCH}
git rebase master
git stash pop
